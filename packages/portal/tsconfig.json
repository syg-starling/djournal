{
  "extends": "../../tsconfig.next.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "next-env.d.ts",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "node_modules/",
    "dist/",
    "coverage/"
  ]
}
